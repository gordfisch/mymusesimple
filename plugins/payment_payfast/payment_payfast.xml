<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="mymuse">
	<name>plg_mymuse_payment_payfast</name>
	<author>Arboreta</author>
	<creationDate>June 2013</creationDate>
	<copyright>Copyright (C) 2013 Arboreta Internet Services. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@arboreta.ca</authorEmail>
	<authorUrl>www.arboreta.ca</authorUrl>
	<version>3.0.0</version>
	<description>MYMUSE_BUILD_PAYFAST_PAYMENT_FORM</description>
	
	<files>
		<filename plugin="payment_payfast">payment_payfast.php</filename>
		<filename plugin="payment_payfast">payfast_common.inc</filename>
	</files>

	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_mymuse_payment_payfast.ini</language>
		<language tag="en-GB">en-GB.plg_mymuse_payment_payfast.sys.ini</language>
	</languages>
	<config>
	<fields  name="params">
		<fieldset name="basic">
		<field name="test_mode" type="radio" default="off" label="MYMUSE_PAYFAST_TRANSACTIONMODE_LABEL" description="MYMUSE_PAYFAST_TRANSACTIONMODE_DESC">
		  <option value="off">JNO</option>
		  <option value="on">JYES</option>
		</field>
		<field name="merchant_id" type="text" size="35" default="" label="MYMUSE_PAYFAST_MERCHANTID_LABEL" description="MYMUSE_PAYFAST_MERCHANTID_DESC"/>
		<field name="merchant_key" type="text" size="35" default="" label="MYMUSE_PAYFAST_MERCHANT_KEY_LABEL" description="MYMUSE_PAYFAST_MERCHANT_KEY_DESC"/>
		
        <field name="currency" type="list" size="35" default="ZAR" label="MYMUSE_PAYFAST_CURRENCY_LABEL" description="MYMUSE_PAYFAST_CURRENCY_DESC">
		  <option value="ZAR">South African Rand</option>
		</field>
        <field name="debug" type="radio" size="35" default="off" label="MYMUSE_PAYFAST_DEBUG_LABEL" description="MYMUSE_PAYFAST_DEBUG_DESC">
		  <option value="off">JNO</option>
		  <option value="on">JYES</option>
		</field>
		<field name="conversion_multiplier" type="text" size="5" default="0" label="MYMUSE_PAYFAST_CONVERSION_LABEL" description="MYMUSE_PAYFAST_CONVERSION_DESC"/>

	</fieldset>
	</fields>
	</config>
<updateservers>
    <server type="extension" priority="1"
        name="Plug MyMuse Payment Payfast">http://www.joomlamymuse.com/index.php?option=com_ars&amp;view=update&amp;task=stream&amp;format=xml&amp;id=11</server>
</updateservers>
</extension>

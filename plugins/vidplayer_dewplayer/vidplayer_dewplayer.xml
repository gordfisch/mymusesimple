<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0"  type="plugin" group="mymuse">
	<name>plg_mymuse_vidplayer_dewplayer</name>
	<author>Arboreta</author>
	<creationDate>June 2013</creationDate>
	<copyright>Copyright (C) 2013 Arboreta Internet Services. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@arboreta.ca</authorEmail>
	<authorUrl>www.arboreta.ca</authorUrl>
	<version>3.0.0</version>
	<description>MYMUSE_VIDPLAYER_DEWPLAYER</description>
	
	<files>
		<filename plugin="vidplayer_dewplayer">vidplayer_dewplayer.php</filename>
		<filename plugin="vidplayer_dewplayer">vidplayers/dewtube.swf</filename>
		<filename plugin="vidplayer_dewplayer">vidplayers/dewplayervid.js</filename>
	</files>

	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_mymuse_vidplayer_dewplayer.ini</language>
		<language tag="en-GB">en-GB.plg_mymuse_vidplayer_dewplayer.sys.ini</language>
	</languages>

	<config>
	<fields  name="params">
		<fieldset name="basic">

		<field name="my_dewtube_allowFullScreen" type="radio" default="1" label="MYMUSE_ALLOWFULLSCREEN_LABEL" 
		description="MYMUSE_ALLOWFULLSCREEN_DESC">
		  <option value="0">JNO</option>
		  <option value="1">JYES</option>
		</field>
		<field name="my_dewtube_bgcolor" type="text" size="6" default="#000000" 
		label="MYMUSE_BGCOLOR_LABEL" description="MYMUSE_BGCOLOR_DESC"/>
	</fieldset>
	</fields>
	</config>
	<updateservers>
    <server type="extension" priority="1"
        name="Plug MyMuse Vidplayer Dewplayer">http://www.joomlamymuse.com/index.php?option=com_ars&amp;view=update&amp;task=stream&amp;format=xml&amp;id=35&amp;dummy=extension.xml</server>
</updateservers>
</extension>

<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0"  type="plugin" group="mymuse">
	<name>plg_mymuse_audio_mp</name>
	<author>Arboreta</author>
	<creationDate>June 2013</creationDate>
	<copyright>Copyright (C) 2013 Arboreta Internet Services. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@arboreta.ca</authorEmail>
	<authorUrl>www.arboreta.ca</authorUrl>
	<version>3.0.0</version>
	<description>MYMUSE_MP_DESC</description>
	
	<files>
		<filename plugin="audio_mp">audio_mp.php</filename>
		<folder plugin="audio_mp">plugin</folder>
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_mymuse_audio_mp.ini</language>
		<language tag="en-GB">en-GB.plg_mymuse_audio_mp.sys.ini</language>
	</languages>


	<config>
	<fields  name="params">
		<fieldset name="basic">
		<field name="my_include_jquery" type="radio" default="0" label="MYMUSE_MP_INCLUDE_JQUERY_LABEL" 
		description="MYMUSE_MP_INCLUDE_JQUERY_DESC">
		  <option value="0">JNO</option>
		  <option value="1">JYES</option>
		</field>
		<field name="my_player_errors" type="radio" default="0" label="MYMUSE_MP_SHOW_ERRORS_LABEL" 
		description="MYMUSE_MP_SHOW_ERRORS_DESC">
		  <option value="0">JNO</option>
		  <option value="1">JYES</option>
		</field>
		</fieldset>
	</fields>
	</config>
<updateservers>
    <server type="extension" priority="1"
        name="Plug MyMuse Audio Music Player">http://www.joomlamymuse.com/index.php?option=com_ars&amp;view=update&amp;task=stream&amp;format=xml&amp;id=6</server>
</updateservers>
</extension>

<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="mymuse">
	<name>plg_mymuse_payment_stripe</name>
	<author>Arboreta</author>
	<creationDate>Aug 2017</creationDate>
	<copyright>Copyright (C) 2017 Arboreta Internet Services. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@arboreta.ca</authorEmail>
	<authorUrl>www.arboreta.ca</authorUrl>
	<version>3.5.0</version>
	<description>MYMUSE_BUILD_STRIPE_PAYMENT_FORM</description>
	
	<files>
		<filename plugin="payment_stripe">payment_stripe.php</filename>
		<filename plugin="payment_stripe">composer.json</filename>
		<filename plugin="payment_stripe">composer.lock</filename>
		<folder>vendor</folder>
		<folder>images</folder>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_mymuse_payment_stripe.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_mymuse_payment_stripe.sys.ini</language>
	</languages>

	<config>
	<fields  name="params">
		<fieldset name="basic">

        <field name="my_stripe_public_key" 
        	type="text" 
        	size="55" default="" 
        	label="MYMUSE_STRIPE_PUBLIC_LABEL" 
        	description="MYMUSE_STRIPE_PUBLIC_DESC"
        />
        <field name="my_stripe_private_key" 
        	type="text" 
        	size="55" 
        	default="" 
        	label="MYMUSE_STRIPE_PRIVATE_LABEL" 
        	description="MYMUSE_STRIPE_PRIVATE_DESC"
        />
        
        <field type="spacer" />
        <field name="my_stripe_need_zip_code" 
        	type="radio" 
        	default="0" 
        	label="MYMUSE_STRIPE_NEED_ZIP_CODE_LABEL" 
        	description="MYMUSE_STRIPE_NEED_ZIP_CODE_DESC">
		  <option value="0">JNO</option>
		  <option value="1">JYES</option>
		</field>
		
        <field name="my_stripe_need_address" 
        	type="radio" 
        	default="0" 
        	label="MYMUSE_STRIPE_NEED_ADDRESS_LABEL" 
        	description="MYMUSE_STRIPE_NEED_ADDRESS_DESC">
		  <option value="0">JNO</option>
		  <option value="1">JYES</option>
		</field>
		
		<field name="my_stripe_need_shipping" 
        	type="radio" 
        	default="0" 
        	label="MYMUSE_STRIPE_NEED_SHIPPING_LABEL" 
        	description="MYMUSE_STRIPE_NEED_SHIPPING_DESC">
		  <option value="0">JNO</option>
		  <option value="1">JYES</option>
		</field>
        
        

	</fieldset>
	</fields>
	</config>
	
	
	

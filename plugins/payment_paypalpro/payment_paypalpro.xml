				<field name="apiuser" type="text" size="50" default="" label="PLG_MYMUSE_PAYPALPAYMENTSPRO_APIUSER_LABEL" description="PLG_MYMUSE_PAYPALPAYMENTSPRO_APIUSER_DESC"/>

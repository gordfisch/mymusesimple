<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="mymuse">
	<name>plg_mymuse_payment_paynow</name>
	<author>Arboreta</author>
	<creationDate>June 2016</creationDate>
	<copyright>Copyright (C) 2013 Arboreta Internet Services. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@arboreta.ca</authorEmail>
	<authorUrl>www.arboreta.ca</authorUrl>
	<version>3.4.0</version>
	<description>MYMUSE_BUILD_PAYNOW_PAYMENT_FORM</description>
	
	<files>
		<filename plugin="payment_paynow">payment_paynow.php</filename>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_mymuse_payment_paynow.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_mymuse_payment_paynow.sys.ini</language>
	</languages>

	<config>
	<fields  name="params">
		<fieldset name="basic">

		<field name="my_paynow_integration_id" 
			type="text" size="35" 
			default=""
			label="MYMUSE_PAYNOW_INTEGRATION_ID_LABEL" 
			description="MYMUSE_PAYNOW_INTEGRATION_ID_DESC"
		/>
		<field name="my_paynow_integration_key" 
			type="text" 
			size="35" 
			default=""
			label="MYMUSE_PAYNOW_INTEGRATION_KEY_LABEL" 
			description="MYMUSE_PAYNOW_INTEGRATION_KEY_DESC"
		/>

		
        <field name="my_paynow_sandbox" type="radio" 
        	default="0" label="MYMUSE_PAYNOW_USE_SANDBOX_LABEL" 
        	description="MYMUSE_PAYNOW_USE_SANDBOX_DESC">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        
        <field name="my_paynow_sandbox_integration_id" 
        	type="text" 
        	size="35" 
        	default="" 
        	label="MYMUSE_PAYNOW_SANDBOX_INTEGRATION_ID_LABEL" 
        	description="MYMUSE_PAYNOW_SANDBOX_INTEGRATION_ID_DESC"/>
        	
        <field name="my_paynow_sandbox_integration_key" 
        	type="text" 
        	size="35" 
        	default="" 
        	label="MYMUSE_PAYNOW_SANDBOX_INTEGRATION_KEY_LABEL" 
        	description="MYMUSE_PAYNOW_SANDBOX_INTEGRATION_KEY_DESC"/>

		
        <field type="spacer" />
        <field name="email_msg" 
        type="editor" 
        filter="raw" 
        width="200px"
        rows="35" 
        cols="35" 
        default="" 
        label="MYMUSE_MSG_LABEL" 
        description="MYMUSE_MSG_DESC" />
        

	</fieldset>
	</fields>
	</config>

</extension>

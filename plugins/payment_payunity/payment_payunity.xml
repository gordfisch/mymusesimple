<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3.0" type="plugin" group="mymuse" method="upgrade">
	<name>MyMuse Payments - PayUnity</name>
	<author>Arboreta</author>
	<authorEmail>gord@arboreta.ca</authorEmail>
	<authorUrl>http://www.joomlamymuse.ca</authorUrl>
	<copyright>Copyright (c)2015 Arboreta Internet Services</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2015-06-01</creationDate>
	<version>3.3.2</version>
	<description>PLG_MYMUSE_PAYUNITY_DESCRIPTION</description>
	<files>
		<filename plugin="payment_payunity">payment_payunity.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_mymuse_payment_payunity.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_mymuse_payment_payunity.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">

				<field name="sender" type="text" size="50" default="" label="PLG_MYMUSE_PAYUNITY_SENDER_LABEL" description="PLG_MYMUSE_PAYUNITY_SENDER_DESC"/>
				<field name="channel" type="text" size="50" default="" label="PLG_MYMUSE_PAYUNITY_CHANNEL_LABEL" description="PLG_MYMUSE_PAYUNITY_CHANNEL_DESC"/>
				<field name="user_login" type="text" size="50" default="" label="PLG_MYMUSE_PAYUNITY_USER_LOGIN_LABEL" description="PLG_MYMUSE_PAYUNITY_USER_LOGIN_DESC"/>
				<field name="user_pwd" type="text" size="50" default="" label="PLG_MYMUSE_PAYUNITY_USER_PWD_LABEL" description="PLG_MYMUSE_PAYUNITY_USER_PWD_DESC"/>
				<field type="spacer" />
				<field name="test_sender" type="text" size="50" default="" label="PLG_MYMUSE_PAYUNITY_TEST_SENDER_LABEL" description="PLG_MYMUSE_PAYUNITY_TEST_SENDER_DESC"/>
				<field name="test_channel" type="text" size="50" default="" label="PLG_MYMUSE_PAYUNITY_TEST_CHANNEL_LABEL" description="PLG_MYMUSE_PAYUNITY_TEST_CHANNEL_DESC"/>
				<field name="test_user_login" type="text" size="50" default="" label="PLG_MYMUSE_PAYUNITY_TEST_USER_LOGIN_LABEL" description="PLG_MYMUSE_PAYUNITY_TEST_USER_LOGIN_DESC"/>
				<field name="test_user_pwd" type="text" size="50" default="" label="PLG_MYMUSE_PAYUNITY_TEST_USER_PWD_LABEL" description="PLG_MYMUSE_PAYUNITY_TEST_USER_PWD_DESC"/>
				<field type="spacer" />
				<field name="test" type="radio" default="0" label="PLG_MYMUSE_PAYUNITY_TEST_LABEL" description="PLG_MYMUSE_PAYUNITY_TEST_DESC">
				  <option value="0">JNo</option>
				  <option value="1">JYes</option>
				</field>
				<field type="spacer" />
				<field name="default_lang" type="list" 
				default="en" 
				label="PLG_MYMUSE_PAYUNITY_DEFAULT_LANG_LABEL" 
				description="PLG_MYMUSE_PAYUNITY_DEFAULT_LANG_DESC">
				<option value="de">Deutsch</option>
				<option value="en">English</option>
				<option value="it">Italiano</option>
				<option value="es">Español</option>
				<option value="fr">Francais</option>
				<option value="nl">Nederlands</option>
				<option value="fi">Suomeksi</option>
				<option value="sl">Slovenscina</option>
				<option value="pt">Português</option>
				<option value="pl">Polski</option>
				<option value="se">Svenska</option>
				<option value="sk">Slovencina</option>
				<option value="cz">Cesky</option>
				<option value="hu">Magyar Nyelv</option>
				<option value="jp">Japanese</option>
				<option value="bg">Bulgarian</option>
				<option value="ro">România</option>
				<option value="no">Norway</option>
				<option value="dk">Denmark</option>
				</field>
				<field name="css_file" type="text" size="50" 
				default="" 
				label="PLG_MYMUSE_PAYUNITY_CSS_LABEL" description="PLG_MYMUSE_PAYUNITY_CSS_DESC"/>
				<field name="js_file" type="text" size="50" 
				default="" 
				label="PLG_MYMUSE_PAYUNITY_JS_LABEL" description="PLG_MYMUSE_PAYUNITY_JS_DESC"/>
				
				        <field type="spacer" />
        <field name="email_msg" 
        type="editor" 
        filter="raw" 
        width="200px"
        rows="35" 
        cols="35" 
        default="" 
        label="MYMUSE_MSG_LABEL" 
        description="MYMUSE_MSG_DESC" />
			</fieldset>
		</fields>
	</config>
	<updateservers>
    <server type="extension" priority="1"
        name="Plug MyMuse Payment PayPal">http://www.joomlamymuse.com/index.php?option=com_ars&amp;view=update&amp;task=stream&amp;format=xml&amp;id=75</server>
</updateservers>
</extension>
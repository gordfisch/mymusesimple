<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1"  type="plugin" group="mymuse">
	<name>plg_mymuse_audio_amplitude</name>
	<author>Arboreta</author>
	<creationDate>March 2016</creationDate>
	<copyright>Copyright (C) 2016 Arboreta Internet Services. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@arboreta.ca</authorEmail>
	<authorUrl>www.arboreta.ca</authorUrl>
	<version>3.4.0</version>
	<description>MYMUSE_AMPLITUDE_DESC</description>
	
	<files>
		<filename plugin="audio_amplitude">audio_amplitude.php</filename>
		<folder>js</folder>
		<folder>css</folder>
	</files>
	
	<media folder="media" destination="com_mymuse">
		<filename>00_-_silence.mp3</filename>
		<filename>sprite.png</filename>
	</media>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_mymuse_audio_amplitude.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_mymuse_audio_amplitude.sys.ini</language>
	</languages>
	<config>
	<fields  name="params">
		<fieldset name="basic">
		<field 
        		name="my_amplitude_catid" 
        		type="category" 
        		default="0" 
        		label="MYMUSE_AMPLITUDE_CATEGORY_LABEL"
                extension="com_mymuse"
                scope="com_mymuse"
                description="MYMUSE_AMPLITUDE_CATEGORY_DESC" /> 
        <field 
        		name="my_amplitude_playlist_path" 
        		type="text"  
        		default="/media/com_mymuse/playlists/" 
				label="MYMUSE_AMPLITUDE_PLAYLIST_PATH_LABEL" 
				description="MYMUSE_AMPLITUDE_PLAYLIST_PATH_DESC" />
		<field 
        		name="my_amplitude_album_art_path" 
        		type="text"  
        		default="/images/A_MyMuseImages/" 
				label="MYMUSE_AMPLITUDE_ALBUM_ART_PATH_LABEL" 
				description="MYMUSE_AMPLITUDE_ALBUM_ART_PATH_DESC" />
        <field 
        		name="my_amplitude_first_artist" 
        		type="text" 
        		default="PLAYER" 
				label="MYMUSE_AMPLITUDE_FIRST_ARTIST_LABEL" 
				description="MYMUSE_AMPLITUDE_FIRST_ARTIST_DESC" />
		<field 
        		name="my_amplitude_first_album" 
        		type="text"  
        		default="READY" 
				label="MYMUSE_AMPLITUDE_FIRST_ALBUM_LABEL" 
				description="MYMUSE_AMPLITUDE_FIRST_ALBUM_DESC" />
		<field 
        		name="my_amplitude_first_url" 
        		type="text"  
        		default="media/com_mymuse/00_-_silence.mp3" 
				label="MYMUSE_AMPLITUDE_FIRST_URL_LABEL" 
				description="MYMUSE_AMPLITUDE_FIRST_URL_DESC" />
		<field 
        		name="my_amplitude_first_cover" 
        		type="text"  
        		default="components/com_mymuse/assets/images/logo_sq.jpg" 
				label="MYMUSE_AMPLITUDE_FIRST_COVER_LABEL" 
				description="MYMUSE_AMPLITUDE_FIRST_COVER_DESC" />
		<field 
        		name="my_amplitude_sprite_path" 
        		type="text"  
        		default="media/com_mymuse/sprite.png" 
				label="MYMUSE_AMPLITUDE_SPRITE_PATH_LABEL" 
				description="MYMUSE_AMPLITUDE_SPRITE_PATH_DESC" />
		</fieldset>
		
	</fields>
	</config>
</extension>
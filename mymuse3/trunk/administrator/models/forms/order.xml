<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

         <field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
             readonly="true" 
             class="readonly"
             description="JGLOBAL_FIELD_ID_DESC" /> 
             
         <field name="order_number" type="text" default="0" label="MYMUSE_ORDER_NUMBER"
             readonly="true" 
             class="readonly"
         />
         <field
                name="order_status"
                type="sql"
                label="MYMUSE_ORDER_STATUS"
                description="MYMUSE_ORDER_STATUS"
                class="inputbox"
                query="SELECT code as value, name as order_status FROM #__mymuse_order_status"
         />
         <field name="order_subtotal" type="text" default="0" label="MYMUSE_SUBTOTAL"
             readonly="true" 
             class="readonly"
         />
         <field name="order_total" type="text" default="0" label="MYMUSE_TOTAL"
             readonly="true" 
             class="readonly"
         />
         <field name="order_currency" type="text" default="0" label="MYMUSE_CURRENCY"
             readonly="true" 
             class="readonly"
         />
         <field name="order_shipping" type="text" default="0" label="MYMUSE_SHIPPING"
             readonly="true" 
             class="readonly"
         />
         <field name="coupon_name" type="text" default="0" label="MYMUSE_COUPON_NAME"
             readonly="true" 
             class="readonly"
         />
         <field name="coupon_discount" type="text" default="0" label="MYMUSE_COUPON_DISCOUNT"
             readonly="true" 
             class="readonly"
         />
         <field name="created" type="text" default="0" label="MYMUSE_CREATED"
             readonly="true" 
             class="readonly"
         />
         <field name="modified" type="text" default="0" label="MYMUSE_MODIFIED"
             readonly="true" 
             class="readonly"
         />
         <field name="discount" type="text" default="0" label="MYMUSE_DISCOUNT"
             readonly="true" 
             class="readonly"
         />

         
         <field name="notes" type="textarea" 
         	label="MYMUSE_NOTES" 
         	description="MYMUSE_NOTES" 
         	rows="4" cols="50" 
         />
		 <field name="payment_date" type="calendar"  
			label="MYMUSE_DATE" 
			class="inputbox"
			description="" 
		 />

         <field name="checked_out" type="hidden" filter="unset" />
         <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>

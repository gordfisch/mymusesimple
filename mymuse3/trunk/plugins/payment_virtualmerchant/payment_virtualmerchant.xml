<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0"  type="plugin" group="mymuse">
	<name>PLG_MYMUSE_PAYMENT_VIRTUALMERCHANT</name>
	<author>Arboreta</author>
	<creationDate>September 2013</creationDate>
	<copyright>Copyright (C) 2013 Arboreta Internet Services. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@arboreta.ca</authorEmail>
	<authorUrl>www.arboreta.ca</authorUrl>
	<version>2.5.0</version>
	<description>MYMUSE_BUILD_VIRTUALMERCHANT_PAYMENT_FORM</description>
	
	<files>
		<filename plugin="payment_virtualmerchant">payment_virtualmerchant.php</filename>
	</files>

	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_mymuse_payment_virtualmerchant.ini</language>
		<language tag="en-GB">en-GB.plg_mymuse_payment_virtualmerchant.sys.ini</language>
	</languages>

	<config>
	<fields name="params">
		<fieldset name="basic">
		<field name="my_virtualmerchant_merchant_id" type="text" size="35" default="" 
			label="MYMUSE_VIRTUALMERCHANT_MERCHANT_ID_LABEL" 
			description="MYMUSE_VIRTUALMERCHANT_MERCHANT_ID_DESC"/>
		<field name="my_virtualmerchant_user_id" type="text" size="35" default="" 
			label="MYMUSE_VIRTUALMERCHANT_USER_ID_LABEL" 
			description="MYMUSE_VIRTUALMERCHANT_USER_ID_DESC"/>
		<field name="my_virtualmerchant_pin" type="text" size="35" default="" 
			label="MYMUSE_VIRTUALMERCHANT_PIN_LABEL" 
			description="MYMUSE_VIRTUALMERCHANT_PIN_DESC"/>

		<field type="spacer" />
        <field name="my_virtualmerchant_test" type="radio" default="0" 
        	label="MYMUSE_VIRTUALMERCHANT_TEST_LABEL" 
        	description="MYMUSE_VIRTUALMERCHANT_TEST_DESC">
	 			<option value="0">JNO</option>
	 			<option value="1">JYES</option>
	 	</field>
		<field name="my_virtualmerchant_test_merchant_id" type="text" size="35" default="" 
			label="MYMUSE_VIRTUALMERCHANT_TEST_MERCHANT_ID_LABEL" 
			description="MYMUSE_VIRTUALMERCHANT_TEST_MERCHANT_ID_DESC"/>
		<field name="my_virtualmerchant_test_user_id" type="text" size="35" default="" 
			label="MYMUSE_VIRTUALMERCHANT_TEST_USER_ID_LABEL" 
			description="MYMUSE_VIRTUALMERCHANT_TEST_USER_ID_DESC"/>
		<field name="my_virtualmerchant_test_pin" type="text" size="35" default="" 
			label="MYMUSE_VIRTUALMERCHANT_TEST_PIN_LABEL" 
			description="MYMUSE_VIRTUALMERCHANT_TEST_PIN_DESC"/>
	
	</fieldset>
	</fields>
	</config>

</extension>
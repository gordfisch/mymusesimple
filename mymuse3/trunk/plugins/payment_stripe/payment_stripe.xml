<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="mymuse">
	<name>plg_mymuse_payment_stripe</name>
	<author>Arboreta</author>
	<creationDate>Aug 2017</creationDate>
	<copyright>Copyright (C) 2017 Arboreta Internet Services. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@arboreta.ca</authorEmail>
	<authorUrl>www.arboreta.ca</authorUrl>
	<version>3.5.0</version>
	<description>MYMUSE_BUILD_STRIPE_PAYMENT_FORM</description>
	
	<files>
		<filename plugin="payment_stripe">payment_stripe.php</filename>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_mymuse_payment_stripe.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_mymuse_payment_stripe.sys.ini</language>
	</languages>

	<config>
	<fields  name="params">
		<fieldset name="basic">
		<field name="my_stripe_email" type="text" size="35" default="info@arboreta.ca"
		label="MYMUSE_STRIPE_EMAIL_LABEL" description="MYMUSE_STRIPE_EMAIL_DESC"
		
		/>
		
        <field name="my_stripe_sandbox" type="radio" default="0" label="MYMUSE_STRIPE_USE_SANDBOX_LABEL" description="MYMUSE_STRIPE_USE_SANDBOX_DESC">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field name="my_stripe_sandbox_email" type="text" size="35" default="" label="MYMUSE_STRIPE_SANDBOX_EMAIL_LABEL" description="MYMUSE_STRIPE_SANDBOX_EMAIL_DESC"/>
        <field name="my_stripe_sandbox_customer_email" type="text" size="35" default="" label="MYMUSE_STRIPE_SANDBOX_CUSTOMER_EMAIL_LABEL" description="MYMUSE_STRIPE_SANDBOX_CUSTOMER_EMAIL_DESC"/>
        <field type="spacer" />
        <field name="my_use_image" 
        	type="radio" 
        	default="0" 
        	label="MYMUSE_STRIPE_USE_IMAGE_LABEL" 
        	description="MYMUSE_STRIPE_USE_IMAGE_DESC">
		  <option value="0">JNO</option>
		  <option value="1">JYES</option>
		</field>
		<field 
			name="my_stripe_image_color" type="radio" 
			default="white" 
			label="MYMUSE_STRIPE_IMAGE_COLOR_LABEL" 
			description="MYMUSE_STRIPE_IMAGE_COLOR_DESC">
          <option value="white">MYMUSE_STRIPE_IMAGE_COLOR_WHITE</option>
          <option value="blue">MYMUSE_STRIPE_IMAGE_COLOR_BLUE</option>
          <option value="black">MYMUSE_STRIPE_IMAGE_COLOR_BLACK</option>
        </field>
        <field type="spacer" />
        <field name="email_msg" 
        type="editor" 
        filter="raw" 
        width="200px"
        rows="35" 
        cols="35" 
        default="" 
        label="MYMUSE_MSG_LABEL" 
        description="MYMUSE_MSG_DESC" />
        

	</fieldset>
	</fields>
	</config>

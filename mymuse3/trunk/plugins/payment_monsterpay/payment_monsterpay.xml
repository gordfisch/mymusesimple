<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0"  type="plugin" group="mymuse">
	<name>plg_mymuse_payment_monsterpay</name>
	<author>Arboreta</author>
	<creationDate>June 2013</creationDate>
	<copyright>Copyright (C) 2013 Arboreta Internet Services. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@arboreta.ca</authorEmail>
	<authorUrl>www.arboreta.ca</authorUrl>
	<version>3.0.0</version>
	<description>MYMUSE_BUILD_MONSTERPAY_PAYMENT_FORM</description>
	
	<files>
		<filename plugin="payment_monsterpay">payment_monsterpay.php</filename>
	</files>

	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_mymuse_payment_monsterpay.ini</language>
		<language tag="en-GB">en-GB.plg_mymuse_payment_monsterpay.sys.ini</language>
	</languages>
    <config>
	<fields  name="params">
		<fieldset name="basic">

		<field name="my_monsterpay_mode" type="radio" default="test" label="MYMUSE_MONSTERPAY_TRANSACTIONMODE_LABEL" description="MYMUSE_MONSTERPAY_TRANSACTIONMODE_DESC">
		  <option value="test">MYMUSE_MONSTERPAY_TEST</option>
		  <option value="production">MYMUSE_MONSTERPAY_PRODUCTION</option>
		</field>
		<field name="my_monsterpay_merchantid" type="text" size="35" default="" label="MYMUSE_MONSTERPAY_MERCHANTID_LABEL" description="MYMUSE_MONSTERPAY_MERCHANTID_DESC"/>
		<field name="my_monsterpay_username" type="text" size="35" default="" label="MYMUSE_MONSTERPAY_USERNAME_LABEL" description="MYMUSE_MONSTERPAY_USERNAMEDESC"/>
		<field name="my_monsterpay_password" type="text" size="35" default="" label="MYMUSE_MONSTERPAY_PASSWORD_LABEL" description="MYMUSE_MONSTERPAY_PASSWORD_DESC"/>
		<field name="my_monsterpay_test_merchantid" type="text" size="35" default="testseller1" label="MYMUSE_MONSTERPAY_TEST_MERCHANTID_LABEL" description="MYMUSE_MONSTERPAY_TEST_MERCHANTID_DESC"/>
		<field name="my_monsterpay_test_username" type="text" size="35" default="testseller1@MonsterPay.com" label="MYMUSE_MONSTERPAY_TEST_USERNAME_LABEL" description="MYMUSE_MONSTERPAY_TEST_USERNAMEDESC"/>
		<field name="my_monsterpay_test_password" type="text" size="35" default="testseller" label="MYMUSE_MONSTERPAY_TEST_PASSWORD_LABEL" description="MYMUSE_MONSTERPAY_TEST_PASSWORD_DESC"/>
		
		<field name="my_monsterpay_templateid" type="text" size="35" default="" label="MYMUSE_MONSTERPAY_TEMPLATEID_LABEL" description="MYMUSE_MONSTERPAY_TEMPLATEID_DESC"/>
		<field name="my_monsterpay_currency" type="radio" default="EUR" label="MYMUSE_MONSTERPAY_CURRENCY_LABEL" description="MYMUSE_MONSTERPAY_CURRENCY_DESC">
		  <option value="USD">USD</option>
		  <option value="EUR">EUR</option>
		  <option value="GBP">GBP</option>
		  <option value="ZAR">ZAR</option>
		</field>
		<field name="my_monsterpay_shipping_required" type="radio" default="0" label="MYMUSE_MONSTERPAY_SHIPPING_LABEL" description="MYMUSE_MONSTERPAY_SHIPPING_DESC">
		  <option value="0">JNO</option>
		  <option value="1">JYES</option>
		</field>



		</fieldset>
	</fields>
	</config>
<updateservers>
    <server type="extension" priority="1"
        name="Plug MyMuse Payment Monsterpay">http://www.joomlamymuse.com/index.php?option=com_ars&amp;view=update&amp;task=stream&amp;format=xml&amp;id=8</server>
</updateservers>
</extension>

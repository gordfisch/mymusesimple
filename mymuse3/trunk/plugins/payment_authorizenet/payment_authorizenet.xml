<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2.10" type="plugin" group="mymuse" method="upgrade">
	<name>PLG_MYMUSE_AUTHORIZENET</name>
	<author>Gord Fisch</author>
	<authorEmail>gord@arboreta.ca</authorEmail>
	<authorUrl>http://www.joomlamymuse.ca</authorUrl>
	<copyright>Copyright (c)2015 Arboreta Internet Services</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>2016-07-15</creationDate>
	<version>3.4.0</version>
	<description>PLG_MYMUSE_AUTHORIZENET_DESCRIPTION</description>
	<files>
		<filename plugin="payment_authorizenet">payment_authorizenet.php</filename>
		<folder>tmpl</folder>
		<folder>fields</folder>
		<folder>PaymentTransactions</folder>
		<folder>vendor</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_mymuse_payment_authorizenet.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_mymuse_payment_authorizenet.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_MYMUSE_AUTHORIZENET_TITLE_LABEL" description="PLG_MYMUSE_AUTHORIZENET_TITLE_DESC"/>
				<field type="spacer" />
				<field name="apiloginid" type="text" size="50" default="" label="PLG_MYMUSE_AUTHORIZENET_APILOGINID_LABEL" description="PLG_MYMUSE_AUTHORIZENET_APILOGINID_DESC"/>
				<field name="apitransactionkey" type="text" size="50" default="" label="PLG_MYMUSE_AUTHORIZENET_APITRANSACTIONKEY_LABEL" description="PLG_MYMUSE_AUTHORIZENET_APITRANSACTIONKEY_DESC"/>
				<field type="spacer" />
				<field name="my_authorizenet_sandbox" type="radio" default="0" label="PLG_MYMUSE_AUTHORIZENET_SANDBOX_LABEL" description="PLG_MYMUSE_AUTHORIZENET_SANDBOX_DESC">
				  <option value="0">JNo</option>
				  <option value="1">JYes</option>
				</field>
				<field name="sb_apiloginid" type="text" size="50" default="" label="PLG_MYMUSE_AUTHORIZENET_SB_APILOGINID_LABEL" description="PLG_MYMUSE_AUTHORIZENET_SB_APILOGINID_DESC"/>
				<field name="sb_apitransactionkey" type="text" size="50" default="" label="PLG_MYMUSE_AUTHORIZENET_SB_APITRANSACTIONKEY_LABEL" description="PLG_MYMUSE_AUTHORIZENET_SB_APITRANSACTIONKEY_DESC"/>

				<field type="spacer" />


				<field name="email_msg" 
        type="editor" 
        filter="raw" 
        width="200px"
        rows="35" 
        cols="35" 
        default="" 
        label="MYMUSE_MSG_LABEL" 
        description="MYMUSE_MSG_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>